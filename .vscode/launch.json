  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch development",
      "request": "launch",
      "type": "dart",
      "preLaunchTask": "Start API",
      "program": "lib/main_development.dart",
      "toolArgs": [
        "--dart-define", "BASE_URL=http://localhost:8080"
      ],
      "args": [
        "--flavor",
        "development",
        "--target",
        "lib/main_development.dart"
      ]
    },
    {
      "name": "Launch staging",
      "request": "launch",
      "type": "dart",
      "preLaunchTask": "Start API",
